doctype html

html
  head
    link[href='http://fonts.googleapis.com/css?family=Lato&subset=latin,latin-ext' rel='stylesheet' type='text/css']
    script[src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"]
    css:
      * {
        font-family: 'Lato';
        text-align: center;
        box-sizing: border-box;
      }
      li {
        text-align: left;
      }
      button, .button {
        background-image: url('Top Bar.png');
        color: white;
        text-decoration: none;
        padding: 10px;
        outline: 0;
        border: 0;
        margin: 10px;
      }
      .test_button {
        display: block;
        color: black;
        width: 240px;
        background-image: none;
        background-color: #eee;
        padding: 10px 0;
        margin: 10px auto;
      }
      .test_button img {
        display: block;
        margin: auto;
      }
      .test_button.fan img {
        width: 77px;
        height: 77px;
      }
      .test_button.humidifier img {
        width: 47px;
        height: 68px;
      }
      header {
        background-image: url('Top Bar.png');
        padding: 1px;
        color: white;
      }
      sub {
        font-size: 0.7em;
      }
      div.logo {
        background-image: url('logo_2.png');
        background-size: 85px 30px;
        background-repeat: no-repeat;
        width: 85px;
        height: 30px;
        margin: 10px auto;
      }
      div.controls {
        margin-bottom: 20px;
      }
      div.controls div {
        margin-top: 20px;
        margin-bottom: 20px;
      }
      img {
        width: 100%;
      }
      .setup_video {
        width: 100%;
      }

  body
    header
      a[href="/"]
        div.logo
      sub Smart Environmental Control Systems
    == yield
